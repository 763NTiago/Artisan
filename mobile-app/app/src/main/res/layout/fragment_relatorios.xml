<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluxo de Projetos e ComissÃµes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente:"
                android:textSize="12sp"
                android:textColor="#666"/>
            <Spinner
                android:id="@+id/spinFiltroCliente"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/ic_launcher_background"
                android:backgroundTint="#F0F0F0"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projeto:"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                    <Spinner
                        android:id="@+id/spinFiltroProjeto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="#F0F0F0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arquiteto:"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                    <Spinner
                        android:id="@+id/spinFiltroArquiteto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="#F0F0F0"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnDataInicio"
                    android:text="Data InÃ­cio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFF"
                    android:textColor="#333"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnDataFim"
                    android:text="Data Fim"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFF"
                    android:textColor="#333"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnLimparFiltros"
                    android:text="Limpar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnFiltrarAgora"
                    android:text="ðŸ” FILTRAR AGORA"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="40dp"
                    android:backgroundTint="#00C853"
                    android:textColor="#FFF"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="#17A2B8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView android:text="InÃ­cio" android:textColor="#FFF" android:textStyle="bold" android:gravity="center" android:layout_width="90dp" android:layout_height="wrap_content"/>
                <TextView android:text="Entrega" android:textColor="#FFF" android:textStyle="bold" android:gravity="center" android:layout_width="90dp" android:layout_height="wrap_content"/>
                <TextView android:text="Cliente" android:textColor="#FFF" android:textStyle="bold" android:paddingStart="8dp" android:layout_width="140dp" android:layout_height="wrap_content"/>
                <TextView android:text="Projeto" android:textColor="#FFF" android:textStyle="bold" android:paddingStart="8dp" android:layout_width="180dp" android:layout_height="wrap_content"/>
                <TextView android:text="Arquiteto" android:textColor="#FFF" android:textStyle="bold" android:paddingStart="8dp" android:layout_width="100dp" android:layout_height="wrap_content"/>
                <TextView android:text="Total Proj." android:textColor="#FFF" android:textStyle="bold" android:gravity="end" android:paddingEnd="8dp" android:layout_width="110dp" android:layout_height="wrap_content"/>
                <TextView android:text="ComissÃ£o" android:textColor="#FFF" android:textStyle="bold" android:gravity="end" android:paddingEnd="8dp" android:layout_width="100dp" android:layout_height="wrap_content"/>
                <TextView android:text="Recebido" android:textColor="#FFF" android:textStyle="bold" android:gravity="end" android:paddingEnd="8dp" android:layout_width="110dp" android:layout_height="wrap_content"/>
                <TextView android:text="Pendente" android:textColor="#FFF" android:textStyle="bold" android:gravity="end" android:paddingEnd="8dp" android:layout_width="110dp" android:layout_height="wrap_content"/>
                <TextView android:text="Lucro" android:textColor="#FFF" android:textStyle="bold" android:gravity="end" android:paddingEnd="8dp" android:layout_width="110dp" android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRelatorios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:padding="12dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Totais dos Dados Filtrados"
            android:textStyle="bold"
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/lblTotal" android:text="Total: R$ 0,00" android:textStyle="bold" android:paddingEnd="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/lblRecebido" android:text="Entrou: R$ 0,00" android:textStyle="bold" android:textColor="#28A745" android:paddingEnd="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/lblPendente" android:text="Falta: R$ 0,00" android:textStyle="bold" android:textColor="#FF9800" android:paddingEnd="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/lblComissao" android:text="Saiu: R$ 0,00" android:textStyle="bold" android:textColor="#D32F2F" android:paddingEnd="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/lblLucro" android:text="LÃ­quido: R$ 0,00" android:textStyle="bold" android:textColor="#007BFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnExportarExcel"
            android:text="ðŸ’¾ Exportar Excel Detalhado"
            android:backgroundTint="#00C853"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>