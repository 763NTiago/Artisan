<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView android:text="Meu Perfil" android:textSize="24sp" android:textStyle="bold" android:layout_marginBottom="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etNomePerfil" android:hint="Nome" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
    <EditText android:id="@+id/etEmailPerfil" android:hint="Email" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
    <EditText android:id="@+id/etSenhaPerfil" android:hint="Nova Senha (Opcional)" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp"/>

    <Button android:id="@+id/btnSalvarPerfil" android:text="Salvar Alterações" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp"/>
    <Button android:id="@+id/btnLogout" android:text="Sair (Logout)" android:backgroundTint="#D32F2F" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>