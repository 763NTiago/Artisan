<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Novo Parceiro / Arquiteto"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Nome:"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtNomeArq"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ic_launcher_background"
                android:backgroundTint="#F0F0F0"
                android:paddingStart="8dp"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:text="Dia Pag:"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/edtDiaPagArq"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="number"
                        android:text="10"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="#F0F0F0"
                        android:paddingStart="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:text="ComissÃ£o (%):"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/edtPctArq"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="numberDecimal"
                        android:hint="Ex: 10"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="#F0F0F0"
                        android:paddingStart="8dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnSalvarArq"
                    android:text="SALVAR"
                    android:textSize="12sp"
                    android:backgroundTint="#28A745"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:text="Arquitetos Cadastrados:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerArquitetos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>