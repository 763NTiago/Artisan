<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnCarregarHist"
            android:text="ðŸ“‚ Carregar"
            android:backgroundTint="#17A2B8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnEditarHist"
            android:text="ðŸ“ Editar"
            android:backgroundTint="#FFC107"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnRemoverHist"
            android:text="ðŸ—‘ï¸ Remover"
            android:backgroundTint="#DC3545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAtualizarLista"
        android:text="ðŸ”„ Atualizar Lista"
        android:backgroundTint="#6C757D"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#007BFF">

        <TextView android:text="ID" android:textColor="#FFF" android:textStyle="bold" android:gravity="center" android:layout_width="40dp" android:layout_height="wrap_content"/>
        <TextView android:text="Data" android:textColor="#FFF" android:textStyle="bold" android:layout_width="90dp" android:layout_height="wrap_content"/>
        <TextView android:text="Cliente" android:textColor="#FFF" android:textStyle="bold" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
        <TextView android:text="Valor" android:textColor="#FFF" android:textStyle="bold" android:gravity="end" android:layout_width="100dp" android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistoricoTab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"/>

</LinearLayout>